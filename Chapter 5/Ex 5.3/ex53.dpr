program ex53;
{
Write a program that prompts the user to enter a short message and the number of times
it is to be displayed and then displays the message the required number of times.
}

{$APPTYPE CONSOLE}

uses
  SysUtils;

var
  Count, n_times : Integer;
  msg : String;

begin
  Writeln('Type a short message: ');
  Readln(msg);
  Writeln('The number of times it is to be displayed: ');
  Readln(n_times);

  for Count := 1 to n_times do Writeln(msg);

  Readln;
